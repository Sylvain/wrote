<br>
<% @articles.each do |article| %>
  <article>
    <h2><%= article.title %></h2>
    <p><time datetime="<%= article.date %>"><%= I18n.l(article.date, format: :long) %></time></p>
    <%= article.body.to_plain_text.truncate(340) %>
    <br>
    <p><%= link_to t('read_more').html_safe, article_path(article), class: 'btn' %></p>
  </article>
<% end %>

<br>

<%= will_paginate @articles, page_links: false %>
